{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": true,
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all",
    "htmlWhitespaceSensitivity": "ignore",
    "endOfLine": "auto",

    "plugins": ["@trivago/prettier-plugin-sort-imports"],

    "importOrder": [
        "^vue$|^@vue/.*$",
        "<THIRD_PARTY_MODULES>",
        "^@/assets/(.*)$",
        "^@/stores/(.*)$",
        "^@/composables/(.*)$",
        "^@/components/(.*)$",
        "^@/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
