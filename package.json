{
    "name": "johannische-kirche-gesangbuch",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && vite build",
        "build:prod": "cross-env NODE_ENV=production vue-tsc && vite build",
        "preview": "vite preview",
        "test:e2e": "cypress run",
        "test:unit": "vitest",
        "lint": "eslint .",
        "format": "prettier --write src/ --ignore-path dist/",
        "deploy": "pnpm run build:prod && wrangler pages deploy dist",
        "deploy:staging": "cross-env NODE_ENV=staging pnpm run build && wrangler pages deploy dist --branch staging",
        "wrangler:dev": "wrangler pages dev dist"
    },
    "dependencies": {
        "@capacitor/app": "8.0.0",
        "@capacitor/core": "8.0.0",
        "@capacitor/haptics": "8.0.0",
        "@capacitor/keyboard": "8.0.0",
        "@capacitor/status-bar": "8.0.0",
        "@directus/sdk": "^20.3.0",
        "@ionic/vue": "^8.0.0",
        "@ionic/vue-router": "^8.0.0",
        "abcjs": "^6.6.0",
        "dexie": "^4.2.1",
        "graphql": "^16.12.0",
        "ionicons": "^8.0.13",
        "pinia": "^3.0.4",
        "vue": "^3.3.0",
        "vue-router": "^4.2.0"
    },
    "devDependencies": {
        "@capacitor/cli": "8.0.0",
        "@eslint/js": "^9.39.2",
        "@trivago/prettier-plugin-sort-imports": "^6.0.0",
        "@vitejs/plugin-legacy": "^7.2.1",
        "@vitejs/plugin-vue": "^6.0.3",
        "@vue/eslint-config-prettier": "^10.2.0",
        "@vue/test-utils": "^2.4.6",
        "cross-env": "^7.0.3",
        "cypress": "^15.8.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-prettier": "^5.5.1",
        "eslint-plugin-prettier-vue": "^5.0.0",
        "eslint-plugin-vue": "^10.6.2",
        "jsdom": "^27.4.0",
        "prettier": "^3.6.2",
        "terser": "^5.44.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.19.1",
        "vite": "^7.3.0",
        "vite-plugin-pwa": "^1.2.0",
        "vite-plugin-vue-devtools": "^8.0.5",
        "vitest": "^4.0.16",
        "vue-eslint-parser": "^10.2.0",
        "vue-tsc": "^3.2.1",
        "wrangler": "^4.0.0"
    },
    "description": "An Ionic project"
}
